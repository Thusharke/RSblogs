<%- include("../partials/header") %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/new.css" />
</head>
<body>
    <%- include("../partials/nav") %>
    <h1 class="heading"><i class="fas fa-plus fa-md"></i> Add New Post</h1>
    <form class="newForm" action="/blogs" method="POST">
        <div class="From-tag">
            <label for="author">Author</label>
            <input type="text" name="author" placeholder="Jhon Doe" required>
        </div>

        <div class="From-tag">
            <label for="title">Title</label>
            <input type="text" name="title" placeholder="ex. Find Yourself" required>
        </div>

        <div class="From-tag">
            <label for="image">Image</label>
            <input type="text" name="image" placeholder="paste image url" required>
        </div>

        <div class="From-tag">
            <label for="description">Description</label>
            <input type="text" name="description" placeholder="Explain your Topic" required>
            <button type="submit" class="new">Post</button>
        </div>
    </form>    



